{
  "hooks": {
    "pre-commit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "git diff --check",
            "enabled": true
          }
        ]
      }
    ]
  },
  "mcpServers": {
    "sqlite": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sqlite"],
      "enabled": true
    }
  }
}
