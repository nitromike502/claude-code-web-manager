{
  "hooks": {
    "pre-commit": [
      {
        "matcher": "*.js",
        "hooks": [
          {
            "type": "command",
            "command": "eslint --fix",
            "enabled": true
          }
        ]
      }
    ],
    "post-commit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "git log -1",
            "enabled": true
          }
        ]
      }
    ],
    "pre-push": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "npm test",
            "enabled": true
          }
        ]
      }
    ],
    "post-merge": [
      {
        "matcher": "package.json",
        "hooks": [
          {
            "type": "command",
            "command": "npm install",
            "enabled": true
          }
        ]
      }
    ]
  }
}
