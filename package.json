{
  "name": "claude-code-manager",
  "version": "1.0.0",
  "description": "Web-based tool for managing Claude Code projects, subagents, slash commands, hooks, and MCP servers",
  "main": "src/backend/server.js",
  "scripts": {
    "start": "node src/backend/server.js",
    "dev": "node --watch src/backend/server.js",
    "test": "jest",
    "test:backend": "jest tests/backend",
    "test:frontend": "playwright test",
    "test:frontend:component": "playwright test tests/frontend",
    "test:frontend:e2e": "playwright test tests/e2e",
    "test:frontend:visual": "playwright test visual-regression.spec.js",
    "test:full": "npm run test:backend && npm run test:frontend",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:visual:update": "playwright test visual-regression.spec.js --update-snapshots",
    "test:visual:report": "playwright show-report"
  },
  "keywords": [
    "claude-code",
    "manager",
    "subagents",
    "mcp"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "gray-matter": "^4.0.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "jest": "^30.2.0",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
