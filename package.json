{
  "name": "claude-code-config-manager",
  "version": "1.0.1",
  "description": "Web-based tool for managing Claude Code projects, subagents, slash commands, hooks, and MCP servers",
  "main": "src/backend/server.js",
  "bin": {
    "claude-code-config-manager": "./bin/cli.js"
  },
  "files": [
    "bin/",
    "src/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "start": "node src/backend/server.js",
    "dev:backend": "node --watch src/backend/server.js",
    "test": "jest",
    "test:backend": "jest tests/backend",
    "test:frontend": "playwright test",
    "test:frontend:component": "playwright test tests/frontend",
    "test:frontend:e2e": "playwright test tests/e2e",
    "test:frontend:visual": "playwright test 300-visual-regression.spec.js",
    "test:full": "npm run test:backend && npm run test:frontend",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:visual:update": "playwright test 300-visual-regression.spec.js --update-snapshots",
    "test:visual:report": "playwright show-report"
  },
  "keywords": [
    "claude-code",
    "manager",
    "subagents",
    "mcp"
  ],
  "author": "Mike Eckert",
  "license": "MIT",
  "dependencies": {
    "@vitejs/plugin-vue": "^6.0.1",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "gray-matter": "^4.0.3",
    "pinia": "^3.0.3",
    "vite": "^7.1.10",
    "vue": "^3.5.22",
    "vue-router": "^4.6.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.0",
    "jest": "^30.2.0",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "directories": {
    "doc": "docs",
    "test": "tests"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nitromike502/claude-code-web-manager.git"
  },
  "bugs": {
    "url": "https://github.com/nitromike502/claude-code-web-manager/issues"
  },
  "homepage": "https://github.com/nitromike502/claude-code-web-manager#readme"
}
